<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="handleSortDialogConfirm">
		<sortItems>
			<ViewSettingsItem text="{i18n>columnDate}" key="timestamp" selected="true" />
			<ViewSettingsItem text="{i18n>columnAsset}" key="asset" />
			<ViewSettingsItem text="{i18n>columnAmount}" key="amount" />
			<ViewSettingsItem text="{i18n>columnFiat}" key="fiat" />
		</sortItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>