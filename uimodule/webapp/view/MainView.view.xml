<mvc:View
    controllerName="com.myorg.bitpandaOverview.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                       <u:FileUploader
                            id="fileUploader"
                            name="myFileUpload"
                            uploadUrl="upload/"
                            fileType="CSV"
                            tooltip="Upload your file to the local server" 
                            sameFilenameAllowed="false"/>
                        <Button
                            text="Upload File"
                            press="onUpload"/>
                        
                         <!-- <List 
                            class="sapUiResponsiveMargin"
                            width="auto"
                            headerText="Transactions"
                            items="{
                                path: 'transactions>/transactions'
                            }" >
                            <StandardListItem
                                title="{transactions>asset}"
                                info="{transactions>amount} {transactions>fiat}"
                                infoState="{= ${transactions>transactionType} === 'buy' ? 'Success' : 'Error'}"/>
                        </List> -->
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
